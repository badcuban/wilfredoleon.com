---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  bodyClass?: string;
}

const {
  title,
  description = "Wilfredo Leon â€” Fire alarm technician and self-taught web developer. Creator of FACP Manuals, a fire alarm documentation platform with an AI troubleshooting tool. Co-founder of Project Trade.",
  bodyClass = "",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://wilfredoleon.com");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="author" content="Wilfredo Leon" />
    <meta name="theme-color" content="#09090b" />
    <meta name="robots" content="index, follow" />

    <link rel="canonical" href={canonicalURL.href} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:site_name" content="Wilfredo Leon" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content="https://wilfredoleon.com/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://wilfredoleon.com/og-image.png" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "name": "Wilfredo Leon",
        "alternateName": "Will",
        "url": "https://wilfredoleon.com",
        "jobTitle": "Fire Alarm Technician",
        "description": "Fire alarm technician and self-taught web developer. Creator of FACP Manuals and co-founder of Project Trade.",
        "sameAs": [
          "https://github.com/badcuban",
          "https://www.twitch.tv/badcuban"
        ],
        "knowsAbout": [
          "Web Development",
          "Fire Alarm Systems",
          "FACP Documentation",
          "Next.js",
          "Astro",
          "Supabase",
          "AI Troubleshooting Tools",
          "Shopify",
          "E-commerce"
        ],
        "owns": {
          "@type": "WebApplication",
          "name": "FACP Manuals",
          "url": "https://facpmanuals.com",
          "description": "Searchable fire alarm documentation library with an AI-powered troubleshooting tool for fire alarm technicians.",
          "applicationCategory": "Reference",
          "operatingSystem": "Web"
        }
      }
    })} />

    <title>{title}</title>
  </head>
  <body class={bodyClass}>
    <slot />
    <script>
      import { inject } from '@vercel/analytics';
      inject();
    </script>
  </body>
</html>
